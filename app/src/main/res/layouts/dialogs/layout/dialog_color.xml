<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:minHeight="118dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Select a color for category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_color_purple"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/view_rounded"
        android:backgroundTint="@color/material_dynamic_tertiary70"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_color_red"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/view_rounded"
        android:backgroundTint="@color/design_default_color_error"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ll_color_purple"
        app:layout_constraintTop_toTopOf="@+id/ll_color_purple"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_color_green"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/view_rounded"
        android:backgroundTint="@color/design_default_color_secondary"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ll_color_red"
        app:layout_constraintTop_toTopOf="@+id/ll_color_red"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_color_blue"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/view_rounded"
        android:backgroundTint="@color/material_dynamic_primary80"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ll_color_green"
        app:layout_constraintTop_toTopOf="@+id/ll_color_green"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>