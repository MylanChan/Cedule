<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:minHeight="118dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Select a color for category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_color_blue"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="@null"
        android:tint="#7BCCF6"
        app:layout_constraintStart_toEndOf="@+id/ib_color_green"
        app:layout_constraintTop_toTopOf="@+id/ib_color_green"
        app:srcCompat="@drawable/ic_circle" />

    <ImageButton
        android:id="@+id/ib_color_green"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="@null"
        android:tint="#03D9C5"
        app:layout_constraintStart_toEndOf="@+id/ib_color_purple"
        app:layout_constraintTop_toTopOf="@+id/ib_color_purple"
        app:srcCompat="@drawable/ic_circle" />

    <ImageButton
        android:id="@+id/ib_color_yellow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:tint="#FDF7DC"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/ic_circle" />

    <ImageButton
        android:id="@+id/ib_color_purple"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="@null"
        android:tint="#ADA5CD"
        app:layout_constraintStart_toEndOf="@+id/ib_color_yellow"
        app:layout_constraintTop_toTopOf="@+id/ib_color_yellow"
        app:srcCompat="@drawable/ic_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>